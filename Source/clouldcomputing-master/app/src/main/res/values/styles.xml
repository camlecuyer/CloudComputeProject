<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/iron</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/jumbo</item>

        <item name="android:windowBackground">@color/iron</item>

        <item name="colorControlNormal">@color/jet</item>
        <item name="colorControlActivated">@color/monsoon</item>
        <item name="colorControlHighlight">@color/monsoon</item>
        <item name="android:textColorHint">@color/jet</item>
        <item name="android:textColorPrimary">@color/jet</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/oil</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/jumbo</item>

        <item name="android:windowBackground">@color/oil</item>
    </style>

</resources>
