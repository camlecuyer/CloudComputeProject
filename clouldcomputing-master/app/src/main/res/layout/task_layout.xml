<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/txt_build_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/building"/>

    <TextView
        android:id="@+id/txt_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_build_label"
        android:layout_toEndOf="@id/txt_build_label"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/txt_floor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_build_label"
        android:layout_margin="2dp"
        android:text="@string/floor"/>

    <TextView
        android:id="@+id/txt_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_floor_label"
        android:layout_toEndOf="@id/txt_floor_label"
        android:layout_below="@id/txt_build_label"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/txt_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_build"
        android:layout_toRightOf="@id/txt_floor"
        android:layout_toEndOf="@id/txt_floor"
        android:layout_margin="2dp"
        android:text="@string/date_opened" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_build_label"
        android:layout_toRightOf="@id/txt_date_label"
        android:layout_toEndOf="@id/txt_date_label"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/txt_desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/description"
        android:layout_below="@id/txt_floor_label"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_floor_label"
        android:layout_toRightOf="@id/txt_desc_label"
        android:layout_toEndOf="@id/txt_desc_label"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/txt_div_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_desc_label"
        android:layout_margin="2dp"
        android:text="@string/division"/>

    <TextView
        android:id="@+id/txt_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_desc_label"
        android:layout_toRightOf="@id/txt_div_label"
        android:layout_toEndOf="@id/txt_div_label"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/txt_loc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_div_label"
        android:layout_margin="2dp"
        android:text="@string/location"/>

    <TextView
        android:id="@+id/txt_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_div_label"
        android:layout_toRightOf="@id/txt_loc_label"
        android:layout_toEndOf="@id/txt_loc_label"
        android:layout_margin="2dp" />
</RelativeLayout>

